<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#040303"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivAvatar"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toTopOf="@+id/ivAvatar"
            app:layout_constraintVertical_bias="0.263"
            tools:text="Ashly Ochwada" />

        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="117dp"
            android:layout_height="141dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/avatartwitter" />

        <TextView
            android:id="@+id/tvHandle"
            android:layout_width="132dp"
            android:layout_height="29dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/tvName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/tvName"
            app:layout_constraintTop_toTopOf="@+id/tvName"
            app:layout_constraintVertical_bias="1.0"
            tools:text="#AshlyOchwada" />

        <TextView
            android:id="@+id/tvTweet"
            android:layout_width="248dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            tools:text="Do what you love and success will follow. Passion is the fuel behind a successful career"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.333"
            app:layout_constraintStart_toEndOf="@+id/ivAvatar"
            app:layout_constraintTop_toBottomOf="@+id/tvName" />

        <ImageView
            android:id="@+id/ivComment"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivAvatar"
            app:srcCompat="@drawable/ic_baseline_comment_24" />

        <ImageView
            android:id="@+id/ivRetweet"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivComment"
            app:layout_constraintStart_toEndOf="@+id/tvNumComment"
            app:layout_constraintTop_toTopOf="@+id/ivComment"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/img" />

        <ImageView
            android:id="@+id/ivLikes"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivRetweet"
            app:layout_constraintStart_toEndOf="@+id/tvNumRetweet"
            app:layout_constraintTop_toTopOf="@+id/ivRetweet"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/img_1" />

        <ImageView
            android:id="@+id/ivShare"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/ivLikes"
            app:layout_constraintStart_toEndOf="@+id/tvNumLikes"
            app:layout_constraintTop_toTopOf="@+id/ivLikes"
            app:srcCompat="@drawable/img_2" />

        <TextView
            android:id="@+id/tvNumComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="2"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivComment"
            app:layout_constraintStart_toEndOf="@+id/ivComment"
            app:layout_constraintTop_toTopOf="@+id/ivComment"
            app:layout_constraintVertical_bias="0.619" />

        <TextView
            android:id="@+id/tvNumRetweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="5"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ivRetweet"
            app:layout_constraintStart_toEndOf="@+id/ivRetweet"
            app:layout_constraintTop_toTopOf="@+id/ivRetweet"
            app:layout_constraintVertical_bias="0.619" />

        <TextView
            android:id="@+id/tvNumLikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="345"
            app:layout_constraintBottom_toBottomOf="@+id/ivLikes"
            app:layout_constraintStart_toEndOf="@+id/ivLikes"
            app:layout_constraintTop_toTopOf="@+id/ivLikes" />

        <TextView
            android:id="@+id/tvNumShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="7"
            app:layout_constraintBottom_toBottomOf="@+id/ivShare"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivShare"
            app:layout_constraintTop_toTopOf="@+id/ivShare" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>